<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/walk_uneven_surfaces_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:onClick="walk_uneven_onCheckboxClicked"
        android:text="Do you use a cane to assist with your navigation?" />

    <CheckBox
        android:id="@+id/df"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:onClick="own_placard_onCheckboxClicked"
        android:text="Can you handle uneven terrain?" />


</LinearLayout>
